<!-- views/pages/auth/register.ejs -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center mb-4">Register</h2>

          <% if(messages.error) { %>
          <div class="alert alert-danger"><%= messages.error %></div>
          <% } %>

          <form action="/auth/register" method="POST">
            <div class="mb-3">
              <label for="nama" class="form-label">Nama Lengkap</label>
              <input
                type="text"
                class="form-control"
                id="nama"
                name="nama"
                required
              />
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
              />
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
            </div>

            <div class="mb-3">
              <label for="nomor_telepon" class="form-label"
                >Nomor Telepon</label
              >
              <input
                type="tel"
                class="form-control"
                id="nomor_telepon"
                name="nomor_telepon"
                required
              />
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Register</button>
            </div>
          </form>

          <div class="text-center mt-3">
            <p>
              Sudah punya akun?
              <a href="/auth/login">Login di sini</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
