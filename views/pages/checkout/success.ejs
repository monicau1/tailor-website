<!-- views/pages/checkout/success.ejs -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body text-center">
          <div class="mb-4">
            <i
              class="fas fa-check-circle text-success"
              style="font-size: 4rem"
            ></i>
          </div>
          <h2>Pesanan Berhasil Dibuat!</h2>
          <p class="text-muted">Nomor Pesanan: #<%= pesanan.id_pesanan %></p>
          <p>
            Status:
            <span class="badge bg-warning"
              ><%= pesanan.StatusPesanan.nama_status %></span
            >
          </p>

          <div class="alert alert-info mt-4">
            <h5>Langkah Selanjutnya:</h5>
            <p>Silakan lakukan pembayaran sesuai total pesanan:</p>
            <h4 class="mb-3">
              Rp <%= pesanan.jumlah_total.toLocaleString('id-ID') %>
            </h4>

            <div class="text-start">
              <p class="mb-2"><strong>Transfer ke:</strong></p>
              <p class="mb-1">Bank BCA</p>
              <p class="mb-1">No. Rekening: 1234567890</p>
              <p class="mb-3">a.n. TOKO JAHIT</p>
            </div>
          </div>

          <div class="d-grid gap-3 mt-4">
            <a
              href="/orders/<%= pesanan.id_pesanan %>/upload-payment"
              class="btn btn-success"
            >
              Upload Bukti Pembayaran
            </a>
            <a
              href="/orders/<%= pesanan.id_pesanan %>"
              class="btn btn-outline-primary"
            >
              Lihat Detail Pesanan
            </a>
            <a href="/orders" class="btn btn-outline-secondary">
              Lihat Semua Pesanan
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
